<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.CookBook">

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Cookbook2">
        <activity
            android:name="com.example.CookBook.ShoppingList"
            android:exported="false"
            android:parentActivityName="com.example.CookBook.MainActivity"/>
        <activity
            android:name="com.example.CookBook.AddCart"
            android:exported="false"
            android:parentActivityName="com.example.CookBook.ShoppingList"/>
        <activity
            android:name="com.example.CookBook.BarcodeActivity"
            android:exported="false"
            android:parentActivityName="com.example.CookBook.MainActivity"/>
        <activity
            android:name="com.example.CookBook.MainActivity"
            android:exported="false" />
        <activity
            android:name="com.example.CookBook.LoginActivity"
            android:exported="false"
            android:parentActivityName="com.example.CookBook.StartActivity"/>
        <activity
            android:name="com.example.CookBook.RegisterActivity"
            android:exported="false"
            android:parentActivityName="com.example.CookBook.StartActivity"/>
        <activity
            android:name="com.example.CookBook.ProfileActivity"
            android:exported="false"
            android:parentActivityName="com.example.CookBook.MainActivity"/>
        <activity
            android:name="com.example.CookBook.StartActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>